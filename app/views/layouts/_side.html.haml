.row
  .btn-group
    - if user_signed_in?
      %button.btn.btn-default= link_to current_user.name.capitalize, user_path(current_user)
      %button.btn.btn-default= link_to "Sign Out", destroy_user_session_path, method: :delete
    - else
      %button.btn.btn-default{"data-target" => "#signIn", "data-toggle" => "modal"} Sign In
      %button.btn.btn-default{"data-target" => "#signUp", "data-toggle" => "modal"} Sign Up
      
%br
.row.hidden-xs
  = form_tag articles_path, :method => 'get', class: 'form-search' do
    .input-group
      = text_field_tag :search, params[:search], class: 'form-control'
      %span.input-group-btn
        = submit_tag 'search', :name => nil, class: 'btn btn-default'
.row.hidden-xs
  %h3 
    Trending Articles
    %i.glyphicon.glyphicon-fire
  %ol
    - Article.published.where("created_at >= ?", Time.zone.now.beginning_of_week).order("impressions_count DESC").limit(5).each do |article|
      %li
        %p
          = link_to article.title, article
          %small
            %i= "by " + article.author_name
