.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      = link_to image_tag('subh.png'), root_path
      %button.navbar-toggle{"data-target" => "#navPage", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    .collapse.navbar-collapse{id: "navPage"}
      %ul.nav.navbar-nav
        - Page.all.each do |page|
          %li.navbar-brand= link_to page.name, articles_path(page_id: page.id)
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.navbar-brand= link_to current_user.name.capitalize, user_path(current_user)
          %li.navbar-brand= link_to "Sign Out", destroy_user_session_path, method: :delete
        - else
          %li
            %a.navbar-brand{href: "#", "data-target" => "#signIn", "data-toggle" => "modal"} Sign In
          %li
            %a.navbar-brand{href: "#", "data-target" => "#signUp", "data-toggle" => "modal"} Sign Up
