.row
  - if @slides
    - @slides.each do |slide|
      .span3= link_to image_tag(slide.photo.url(:medium)), slide
.row
  .span9
    .navbar{style: "margin-top: 42px;"}
      .navbar-inner  
        %ul.nav
          - Page.all.each do |page|
            %li= link_to page.name, articles_path(page_id: page.id)
        %ul.nav.pull-right
          %li.divider-vertical
          %li.dropdown
            
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              - if user_signed_in?
                = current_user.name
              - else
                Stranger
              %b.caret
            %ul.dropdown-menu
              - if user_signed_in?
                %li
                  = link_to "Profile", current_user
                  - if can? :create, Article
                    %li= link_to "Manage", users_path
                  %li= link_to "Log Out", destroy_user_session_path, method: :delete
              - else
                %li= link_to "Sign Up", new_user_registration_path
                %li= link_to "Sign In", new_user_session_path
