%br
.row
  .span1
    %strong{ style: "color: #A0A0A0;"}= article.section
  .span11
    %hr{ style: "border: 1px solid #A0A0A0; margin: 9px"}

.row
  - if article.photo.to_s != "/photos/original/missing.png"
    .span2= image_tag article.photo.url(:thumb), style:"Float:left; padding:10px;"
    .span10
      %h3
        = link_to article.title, article
        %small.muted= time_ago_in_words(article.created_at) + " ago"
      %p
        = article.body[0...1000]
        = link_to "... Read More", article
      .pull-right
        =  article.comments.length.to_s
        %i.icon-comment


  - else
    .span12
      %h3
        = link_to article.title, article
        %small.muted= time_ago_in_words(article.created_at) + " ago"
      %p= article.body
      .pull-right
        =  article.comments.length.to_s
        %i.icon-comment
        %strong= "~ " +  time_ago_in_words(article.created_at) + " ago"
