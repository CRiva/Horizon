.row
  - if article.photo.file?
    .col-md-2
      = link_to image_tag(article.photo.url(:thumb), class: "img-thumbnail"), article
  .col-md-10
    %h3= link_to article.title, article
    %i.glyphicon.glyphicon-user
    %muted= article.author_name
    %i.glyphicon.glyphicon-time  
    %muted= article.read_time
    %i.glyphicon.glyphicon-calendar
    %muted= time_ago_in_words(article.created_at) + " ago"
    %i.glyphicon.glyphicon-comment
    =  article.comments.length.to_s
%hr
