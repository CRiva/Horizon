<meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />

<% if  @article.photo.to_s != "/photos/original/missing.png" %>
  <%= image_tag @article.photo.url(:large), class: "img-polaroid" %>
<% end %>
<h2>
  <%= @article.title %>
</h2>

<script type="text/javascript">
  $(document).ready(function() {
    var size = $("#data > p").size();
 $(".Column1 > p").each(function(index){
  if (index >= size/2){
   $(this).appendTo(".Column2");
  }
 });
  });
</script>

<style type="text/css">
.Column1{float:left; width:45%;padding:2%;}
.Column2{float:left; width:45%;padding:2%;}
@media only screen and (min-width: 481px) and (max-width: 768px){
.Column1{float:left; width:100%;padding:3%;}
.Column2{float:left; width:100%;padding:3%;}}
@media only screen and (min-width: 321px) and (max-width: 480px){
.Column1{float:left; width:100%;padding:3%;}
.Column2{float:left; width:100%;padding:3%;}}
@media only screen and (max-width: 320px){
.Column1{float:left; width:100%;padding:3%;}
.Column2{float:left; width:100%;padding:3%;}}
</style>

  <div id="data" class="Column1">
  <%= simple_format @article.body %>
  </div>
  <div class="Column2"></div>

<div class="span9">
  <% if User.find(@article.author_id).avatar.url != "blank_profile.png" %>
  <%= image_tag User.find(@article.author_id).avatar.url(:icon) %>
  <% end %>
  <%= "Written by: " + User.find(@article.author_id).name %>
  <hr>
</div>

<div class="span9">
  <%= social_share_button_tag(@article.title) %>

<% if can? :update, @article %>
<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Delete', article_path(@article), confirm: "Are you sure?", method: :delete %>
<% end %>

<h4> comments </h4>
<% @article.comments.each do |comment| %>
  <%= render "articles/comment", comment: comment %>
<% end %>
<%= form_for([@article, @comment]) do |f| %>
  <% if !current_user %>
    <%= link_to "Sign In", new_user_session_path %>
  <% elsif current_user.name == nil %>
      <%= link_to "Who are you? (you must set a user name before commenting)", current_user %>
  <% else %>
    <div class="field">
      <strong> <%= current_user.name %> </strong>
      <%= f.text_area :body, placeholder: "Comment..." %>
    </div>
    <p><%= f.submit %></p>
  <% end %>
<% end %>
</div>
