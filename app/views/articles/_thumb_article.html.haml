- if  !article.photo.url.end_with?('/missing.png')
  .span3
    = link_to image_tag(article.photo.url(:medium)), article
    .caption{ style: "min-height: 100px;"}
      %h5
        = link_to article.title, article
        %br
        %strong= article.author_name
        %br
        %small.muted= article.page_name
        %small.muted= time_ago_in_words(article.created_at) + " ago"
        %hr

- else
  .span3
    = link_to image_tag('missing.png'), article
    .caption{ style: "min-height: 100px;"}
      %h5
        = link_to article.title, article
        %br
        %strong= article.author_name
        %br
        %small.muted= article.page_name
        %small.muted= time_ago_in_words(article.created_at) + " ago"
        %hr
