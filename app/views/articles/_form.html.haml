= simple_form_for(@article) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :page, collection: Page.all
    = f.input :body
    = f.file_field :photo
    = f.input :author_id, collection: User.where(page: current_user.page)
    = f.input :due_date
    = f.input :published

  .form-actions
    = f.button :submit
